<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#4490e2"
    tools:context="com.example.irena.equations.MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/r_wnanie_kwadratowe_ax_2_bx_c_0"
        android:onClick="goToSolution1"
        android:id="@+id/sqare_equation"
        android:layout_marginTop="50dp"
        style="@style/button"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/r_wnanie_liniowe_bx_c_0"
        android:onClick="goToSolution2"
        android:id="@+id/linear_equation"
        android:layout_below="@+id/sqare_equation"
        android:layout_marginTop="50dp"
        style="@style/button"
        />



</RelativeLayout>
